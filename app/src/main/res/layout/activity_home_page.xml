<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"

    tools:context=".HomePageActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome user"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/createEventBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlue"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:drawableLeft="@drawable/baseline_calendar_today_white_18dp"
        android:drawablePadding="8dp"
        android:onClick="viewCalendar"
        android:text="View Calendar"
        android:textColor="@android:color/primary_text_dark" />


    <Button
        android:id="@+id/goToGoalsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorTeal"
        android:onClick="goToAddGoals"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:drawableLeft="@drawable/baseline_check_circle_outline_white_18dp"
        android:drawablePadding="8dp"
        android:text="Create Goal"
        android:textColor="@android:color/primary_text_dark" />


    <Button
        android:id="@+id/ProgressBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/materialOrange"
        android:onClick="showProgress"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:drawableLeft="@drawable/baseline_bar_chart_white_18dp"
        android:drawablePadding="8dp"
        android:text="Show My Progress"
        android:textColor="@android:color/primary_text_dark" />

    <Button
        android:id="@+id/wellBeingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorDarkGray"
        android:onClick="wellBeing"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:drawableLeft="@drawable/baseline_favorite_border_white_18dp"
        android:drawablePadding="8dp"
        android:text="Reflect My Well Being"
        android:textColor="@android:color/primary_text_dark" />

    <Button
        android:id="@+id/timerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryGray"
        android:onClick="viewTimer"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:drawableLeft="@drawable/baseline_schedule_white"
        android:drawablePadding="8dp"
        android:text="Breathing Exercise"
        android:textColor="@android:color/primary_text_dark" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="logOut"
        android:paddingLeft="@dimen/fab_margin"
        android:gravity="left|center_vertical"

        android:text="Sign Out" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calendarView">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="396dp"
        android:layout_height="312dp"
        android:layout_weight="1"

        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:dateTextAppearance="@style/TextAppearance.AppCompat.Large"
        tools:weekDayTextAppearance="@style/TextAppearance.AppCompat.Large"
        tools:weekNumberColor="@android:color/white"

        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorTeal"
        android:onClick="gotoEvent"
        android:text="Add Event" />

    <Button
        android:id="@+id/button3"
        android:background = "@color/colorTeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="View Schedule"
        android:onClick = "gotoSchedule"/>

</android.widget.LinearLayout>